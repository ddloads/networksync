{
  "name": "networksync",
  "version": "0.1.0",
  "private": true,
  "description": "Local network version control for game development",
  "workspaces": [
    "core",
    "client"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build -w core",
    "build:client": "npm run build -w client",
    "dev": "npm run dev -w client",
    "test": "npm run test --workspaces --if-present"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "electron": "28.0.0",
    "tsx": "^4.21.0"
  }
}
